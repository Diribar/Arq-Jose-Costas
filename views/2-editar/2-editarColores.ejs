<!-- https://htmlcolorcodes.com/es/selector-de-color/ -->
<%- include('2-editarHead-colores', {titulo: "Edici칩n - Colores"}) %>
<body id="editar_colores">
	<main>
		<table id="tabla">
			<caption>Editar Colores</caption>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>C칩digo</th>
					<th>Muestra</th>
					<th>Comentarios</th>
				</tr>
			</thead>
			<tbody>
				<% for (let i=0; i<colores.length; i++) { %> 
					<tr class="fila numero<%= i %>">
						<td>
							<strong><%= colores[i].nombre %></strong>
						</td>
						<td>
							<input type="text" name="nombre_encabezado" value="<%= colores[i].codigo %>">
						</td>
						<td>
							<input type="text" name="titulo_seccion" value="<%= titulos[i].titulo_seccion %>">
						</td>
						<td>
							<select name="color_fondo_fila">
								<% for (n of colores) { %>
									<option 
										value="<%= n.id %>" 
										<%- n.id == titulos[i].color_fondo_id ? 'selected' : "" %> 
									>
										<%= n.nombre %>
									</option>
								<% } %> 
							</select>
						</td>
						<td>
							<select name="color_letras_fila">
								<% for (n of colores) { %>
									<option 
										value="<%= n.id %>" 
										<%- n.id == titulos[i].color_letras_id ? 'selected' : "" %> 
									>
										<%= n.nombre %>
									</option>
								<% } %> 
							</select>
						</td>
						<% if (titulos[i].imagen_id) { %>
							<td class="td_imagen">
								<div class="div_imagen">
									<img src="/imagenes/varias/<%= titulos[i].imagen.nombre %>">
								</div>
							</td>
						<% } else { %>
							<td class="center">-</td>
						<% } %> 
						</td>
						<td class="center">
							<%- titulos[i].editar_texto ? '<a href="/editar/texto/' + titulos[i].nombre_seccion + '"><i class="fas fa-check-circle"></i></a>' : '<i class="fas fa-times-circle"></i>' %>
						</td>
						<td class="center">
							<%- titulos[i].editar_imagenes ? '<a href="/editar/imagenes/' + titulos[i].nombre_seccion + '"><i class="fas fa-check-circle"></i></a>' : '<i class="fas fa-times-circle"></i>' %>
						</td>
					</tr>
				<% } %>
			</tbody>
		</table>
		<div id="botones">
			<button><a href="/">Volver a la p치gina de edici칩n</a></button>
			<button><a href="/editar/colores">Ir a la Paleta de Colores</a></button>
		</div>
	</main>
</body>
</html>